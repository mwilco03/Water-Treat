# PROFINET Monitor Configuration

[system]
device_name = profinet-sensor-hub
log_level = info
log_file = /var/log/profinet-monitor/monitor.log
daemon_mode = false

[network]
interface = eth0
dhcp_enabled = true
# ip_address = 192.168.1.100
# netmask = 255.255.255.0
# gateway = 192.168.1.1

[profinet]
enabled = true
station_name = rpi-sensor-hub
vendor_id = 0x0493
device_id = 0x0001
product_name = Raspberry Pi Sensor Hub
min_device_interval = 32

[database]
path = /var/lib/profinet-monitor/data.db
create_if_missing = true
busy_timeout_ms = 5000

[logging]
enabled = true
interval_seconds = 60
retention_days = 30
destination = 1
remote_enabled = false
# remote_url = https://your-server.com/api/logs
# remote_api_key = your-api-key

[health]
enabled = true
http_enabled = true
http_port = 8080
file_path = /var/lib/profinet-monitor/health.prom
update_interval_seconds = 10

# Note: Modbus functionality is handled by the PROFINET Controller (SBC #1)
# This RTU communicates via clear-text PROFINET for network analysis
